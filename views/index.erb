<html>
<head>
	<title>Sudoku Game </title>
	<link href="/stylesheets/application.css" rel="stylesheet" type="text/css">
</head>
	<body>
		<h1>Life is too short to play Sudoku - Master Version</h1>
		<div id="flash">
			<%= flash[:notice] %>
		</div>
		<div id ="show-solution-button">
		<form method="get" action="/solution">
    <button type="submit">See Solution</button>
</form>
        </div> 

		<div id="sudoku">
			<form action="/" method "post">
			<% 3.times do |row| %>
			<div class="row">
				        <!-- we want to create separate div elements for boxes to style them using CSS -->
				<% 3.times do |box| %>
					<div class="box">
					<!-- each box will have nine cells -->
					<% 3.times do |cell_row| %>
						<div class ="cell-row">
							<% 3.times do |cell| %>	
								<div class ="cell">	
									  <%= partial :cell, :locals=>{:cell_index => row*27+box*3+cell_row*9+cell} %>
									

								</div>
			                <% end %>
			              </div>
			            <% end %>
			          </div>
			        <% end %>
			      </div>
			    <% end %>
			  </div>	
		<button>Check Solution</button>
	</body>

</html>



